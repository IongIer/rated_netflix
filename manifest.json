{
    "manifest_version": 2,
    "name": "Rated Netflix",
    "version": "1.0",

    "description": "Insert imdb rating onto movie page on netflix",

    "content_scripts": [
        {
            "matches": ["*://www.netflix.com/*"],
            "js": ["ratednflx.js"]
        }
    ],

    "permissions": [
        "*://www.omdbapi.com/*",
        "storage"
    ],

    "browser_action": {
        "default_icon" : "icon.svg",
        "default_title": "Rated Netflix",
        "default_popup": "view.html"
    }

}